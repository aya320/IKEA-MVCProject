@model IEnumerable<GetAllEmployeeDto>

@{
    ViewData["Title"] = "Employee";
}


<br />


<a asp-controller="Employee" asp-action="Create" class="btn " style="background-color: skyblue ;color:royalblue ;font-size:xx-large;font-family:Bahnschrift ">
   Add New Employee
</a>

<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-4" class="bg-babyblue p-3">
        <thead class="text-center ">
            <tr>

                <th> @Html.DisplayNameFor(E => E.Name)</th>
                <th> @Html.DisplayNameFor(E => E.Age)</th>
                <th> @Html.DisplayNameFor(E => E.Address)</th>
                <th> @Html.DisplayNameFor(E => E.Salary)</th>
                <th> @Html.DisplayNameFor(E => E.Email)</th>
                <th> @Html.DisplayNameFor(E => E.Gender)</th>
                @* <th> @Html.DisplayNameFor(E => E.EmployeeType)</th> *@
                <th> @Html.DisplayNameFor(E => E.IsActive)</th>

           
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody class=" text-center">
            @foreach (var employee in Model)
            {
                <tr>

                    <td> @employee.Name</td>
                    <td>@employee.Age </td>
                    <td>@employee.Address </td>
                    <td> @employee.Salary</td>
                    <td>@employee.Email </td>
                    <td>@employee.Gender </td>
                    @* <td> @employee.EmployeeType</td> *@
                    <td>@employee.IsActive </td>
                   
                    <td>
                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="btn " style="background-color: steelblue ">
                            <i class="fas fa-eye "></i>    Details
                        </a>
                    </td>

                    <td>
                        <a asp-controller="Employee" asp-action="Update" asp-route-id="@employee.Id" class="btn" style="background-color: skyblue ">
                            <i class="fas fa-edit "></i>    Update
                        </a>
                    </td>


                    <td>
                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" class="btn " style="color:black ;background-color:lightseagreen">
                <i class="fas fa-trash "></i>    Delete
                </a>
                        
                    </td>

                </tr>
               
            }

        </tbody>
    </table>

}
else
{
    <div class="alert alert-info mt-4 ">
        <h3> NO Employee Here </h3>
    </div>
}
