@model IEnumerable<GetAllEmployeeDto>

@{
    ViewData["Title"] = "Employee";
}


<br />


<a asp-controller="Employee" asp-action="Create" class="btn "
style="background-color: skyblue ;color:royalblue ;font-size:xx-large;font-family:Bahnschrift "
   onmouseover="this.style.backgroundColor='paleturquoise'; this.style.color='';"
   onmouseout="this.style.backgroundColor='skyblue'; this.style.color='royalblue';">
    
   Add New Employee
</a>

<br />
@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="liveToast" class="toast show" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true">
            <div class="toast-header">

                <strong class="me-auto" style="background-color:bl"><i class="fa-solid fa-bell  fa-2x" style="color:mediumblue"></i></strong>

                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" style="  color:mediumslateblue ; font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif ;font-size:large">
                @TempData["Message"]
            </div>
        </div>
    </div>
}
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-4" class="bg-babyblue p-3" >
        <thead class="text-center ">
            <tr>

                <th> @Html.DisplayNameFor(E => E.Name)</th>
                <th> @Html.DisplayNameFor(E => E.Age)</th>
                <th> @Html.DisplayNameFor(E => E.Address)</th>
                <th> @Html.DisplayNameFor(E => E.Salary)</th>
                <th> @Html.DisplayNameFor(E => E.Email)</th>
                <th> @Html.DisplayNameFor(E => E.Gender)</th>
                @* <th> @Html.DisplayNameFor(E => E.EmployeeType)</th> *@
                <th> @Html.DisplayNameFor(E => E.IsActive)</th>

           
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody class=" text-center">
            @foreach (var employee in Model)
            {
                <tr>

                    <td> @employee.Name</td>
                    <td>@employee.Age </td>
                    <td>@employee.Address </td>
                    <td> @employee.Salary</td>
                    <td>@employee.Email </td>
                    <td>@employee.Gender </td>
                    @* <td> @employee.EmployeeType</td> *@
                    <td>@employee.IsActive </td>
                    <partial name="_ButtonsPartial" model="@employee.Id" />

                    @*    <td>
                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="btn " style="background-color: steelblue ">
                            <i class="fas fa-eye "></i>    Details
                        </a>
                    </td>

                    <td>
                        <a asp-controller="Employee" asp-action="Update" asp-route-id="@employee.Id" class="btn" style="background-color: skyblue ">
                            <i class="fas fa-edit "></i>    Update
                        </a>
                    </td>

                    <td>
                        
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" style="color:black ;background-color:darksalmon">
                            <i class="fas fa-trash"></i>Delete

                        </button>
                    </td> *@

                </tr>
                <div class="modal fade" id="deleteModal-@employee.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete </h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body" style="font-family:'Baskerville Old Face' ; font-size:larger ; color:midnightblue ">
                                Are you sure you want to delete this Employee ??      <i class="fa-regular fa-face-sad-cry fa-2x"></i>
                            </div>
                            <div class="modal-footer">
                                <form asp-action="Delete" asp-route-id="@employee.Id" method="post">
                                    <button type="button" class="btn " data-bs-dismiss="modal" style="background-color:teal ;color:black">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
               
            }

        </tbody>
    </table>

}
else
{
    <div class="alert alert-info mt-4 ">
        <h3> NO Employee Here </h3>
    </div>
}
