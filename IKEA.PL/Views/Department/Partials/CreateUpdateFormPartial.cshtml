@model DepartmentEditViewModel
<form action="/Department/Create" method="post" class="col-6">
    <div asp-validation-summary="ModelOnly"> </div>
    <div class="form-group">
        <label class="form-label" asp-for="Code">   </label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"> </span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Name">   </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"> </span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Description">   </label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"> </span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="CreationDate">   </label>
        <input type="date" asp-for="CreationDate" class="form-control" />
        <span asp-validation-for="CreationDate" class="text-danger"> </span>
    </div>
    <br />
    <br />
    <div>
        <input type="submit" value="Submit" class="btn btn-dark" style="color:lightpink " />
        <a asp-action="Index" class="btn btn-dark " style="color:mediumpurple"> Cancel</a>
    </div>

</form>