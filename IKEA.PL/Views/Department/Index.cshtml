<br />
@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="liveToast" class="toast show" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true">
            <div class="toast-header">

                <strong class="me-auto" style="background-color:bl"><i class="fa-solid fa-bell  fa-2x" style="color:crimson"></i></strong>

                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" style="  color:crimson ; font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif ;font-size:large">
                @TempData["Message"]
            </div>
        </div>
    </div>
}

<a asp-controller="Department" asp-action="Create" class="btn"
   style="background-color: lightskyblue; color: black; font-size: xx-large; font-family: Bahnschrift; transition: background-color 0.3s, color 0.3s;"
   onmouseover="this.style.backgroundColor='paleturquoise'; this.style.color='';"
   onmouseout="this.style.backgroundColor='lightskyblue'; this.style.color='black';">
    Create New Department
</a>

<br />

 @if (Model.Count() > 0)
 {
    <table class="table table-striped table-hover mt-4" >
         <thead class="text-center ">
             <tr>

                 <th> @Html.DisplayNameFor(D=>D.Code)</th>
                <th> @Html.DisplayNameFor(D => D.Name)</th>
                <th> @Html.DisplayNameFor(D => D.CreationDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

             </tr>
         </thead>
         <tbody class=" text-center">
             @foreach(var department in Model)
            {
                <tr>

                    <td> @department.Code</td>
                    <td>@department.Name </td>
                    <td>@department.CreationDate </td>
                   <partial name="_ButtonsPartial" model="@department.Id" />

                </tr>
                <div class="modal fade" id="deleteModal-@department.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete </h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body" style="font-family:'Baskerville Old Face' ; font-size:larger ; color:black ">
                                Are you sure you want to delete this Department ??      <i class="fa-regular fa-face-sad-cry fa-2x"></i>
                            </div>
                            <div class="modal-footer">
                                <form asp-action="Delete" asp-route-Id="@department.Id" method="post">
                                    <button type="button" class="btn " data-bs-dismiss="modal" style="background-color:teal ;color:black">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }

         </tbody>
     </table>
     
 }
 else
{
 <div class="alert alert-info mt-4 ">
     <h3> NO Department Here </h3>
 </div>   
}

