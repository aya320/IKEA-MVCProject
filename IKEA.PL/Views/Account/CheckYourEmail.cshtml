@{
    ViewData["Title"] = "CheckYourEmail";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Check</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
        }

        .container {
            text-align: center;
            border: 5px solid red;
            padding: 40px; /* Increased padding for a larger box */
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
            background-color: white;
            position: relative;
        }

        h1 {
            font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
            font-size: 4em; /* Increased font size */
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
            opacity: 0; /* Initially hidden */
            transition: opacity 0.5s;
        }

        .show {
            opacity: 1; /* Show the text */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 id="animatedText">Check Your Email</h1>
    </div>

    <script>
        window.onload = function () {
            const textElement = document.getElementById('animatedText');
            textElement.classList.add('show'); // Show the text

            let isLight = true;
            const colorChangeInterval = setInterval(() => {
                textElement.style.color = isLight ? 'red' : 'lightpink';
                isLight = !isLight;
            }, 500);

            setTimeout(() => clearInterval(colorChangeInterval), 10000);
        };
    </script>
</body>
</html>
