@model ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="ModelOnly"></div>
		<form asp-action="ResetPassword" method="post">
			<input type="hidden" asp-for="Email"  />
			<input type="hidden" asp-for="Token" />

			<input class="text hamda" asp-for="NewPassword" name="password" placeholder="NewPassword" required="">
			<input class="text hamda" asp-for="ConfirmPassword" name="confirmpassword" placeholder="ConfirmPassword" required="">
			<input type="submit" value="SIGNUP">
		</form>
		<br />
		<p>Do you have an Account? <a asp-action="SignIn"> Login Now!</a></p>
	</div>
</div>

<partial name="_ValidationScriptsPartial" />
